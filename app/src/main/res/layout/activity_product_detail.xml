<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:id="@+id/scrollView"
        android:padding="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:id="@+id/relayy"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/toolbar">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_arrow_back_ios_24"
                        android:id="@+id/arrowProductDetailBack"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Trollz"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:textColor="#5729CE"/>
                    <ImageView
                        android:id="@+id/cartImageProductDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="5dp"
                        android:backgroundTint="#5729CE"
                        android:src="@drawable/ic_baseline_shopping_cart_24" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_baseline_favorite_border_24"
                        android:layout_marginEnd="7dp"
                        android:id="@+id/favDetail"/>

                </androidx.appcompat.widget.Toolbar>
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/toolbar"
                    app:cardCornerRadius="7dp"
                    android:elevation="3dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:id="@+id/cardBelow"
                    android:padding="3dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:padding="3dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/shoe"
                            android:id="@+id/ProductdetailImgView"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cardBelow"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:padding="3dp"
                        android:text="Extreme jet Air"
                        android:textSize="22sp"
                        android:layout_marginTop="10dp"
                        android:maxLines="4"
                        android:id="@+id/txtDetailProducttitle"/>
                    <TextView
                        android:id="@+id/txtCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:padding="2dp"
                        android:text="$100.00"
                        android:textColor="@color/black"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="10dp"
                        android:textSize="22sp"/>

                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtDetailProducttitle"
                        android:stepSize="3.0"
                        android:scaleX="0.7"
                        android:scaleY="0.7"
                        android:layout_marginTop="4dp"
                        android:progressBackgroundTint="#FD5901"
                        android:progressTint="#FD5901"
                        android:numStars="3" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ratingBar"

                        android:layout_marginTop="7dp">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:id="@+id/view"
                            android:layout_below="@id/ratingBar"
                            tools:ignore="NotSibling" />
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="5dp"
                            android:elevation="3dp"
                            android:layout_below="@id/view"
                            android:layout_marginTop="3dp"
                            android:padding="4dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="2dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/linny"
                                    android:layout_marginTop="7dp"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Description:"
                                        android:textStyle="bold"
                                        android:textColor="@color/black"
                                        android:padding="2dp"
                                        android:textSize="15sp"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:maxLines="9"
                                        android:padding="2dp"
                                        android:textSize="17sp"
                                        android:text="Hi,This is just  a random test of this product  description being created  Hopefully,it has been great so far "
                                        android:id="@+id/description"/>
                                </LinearLayout>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_below="@id/linny"
                                    android:id="@+id/view2"/>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/view2"
                                    android:id="@+id/rel"
                                    android:layout_marginTop="8dp">


                                </RelativeLayout>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_below="@id/rel"
                                    android:id="@+id/view3"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="9dp"
                                    android:layout_below="@id/view3"
                                    android:padding="3dp">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/scrollView"
                                        android:layout_marginTop="5dp"
                                        android:padding="3dp"
                                        android:orientation="horizontal">
                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <com.google.android.material.button.MaterialButton
                                                android:id="@+id/btnCart"
                                                android:layout_width="wrap_content"
                                                android:layout_height="45dp"
                                                android:layout_marginStart="13dp"
                                                android:elevation="8dp"
                                                android:textAllCaps="false"
                                                android:layout_alignParentEnd="true"
                                                android:text="Cart"
                                                android:backgroundTint="#FD5901"
                                                android:textColor="@color/white"
                                                app:cornerRadius="15dp" />
                                        </RelativeLayout>


                                    </LinearLayout>


                                </LinearLayout>

                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>




                    </RelativeLayout>


                </RelativeLayout>

            </RelativeLayout>
            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/relayy" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view1"
                android:layout_marginTop="12dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="10dp"
                    android:elevation="5dp"
                    app:cardElevation="5dp"
                    android:background="@drawable/btn_cart_background">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Similar Products"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="22dp"
                            android:id="@+id/txtsimilarproduct"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerProductDetail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtsimilarproduct"
                            android:layout_margin="6dp"
                            android:layout_marginStart="1dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginEnd="1dp"
                            android:layout_marginBottom="3dp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>